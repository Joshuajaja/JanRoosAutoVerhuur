<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="JanRoosAutoVerhuur.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:JanRoosAutoVerhuur"
    
    >

    <TabBar>
        <Tab Title="Home" Icon="mainpage.png">
            <ShellContent
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage"/>
        </Tab>
        <Tab Title="Info" Icon="info.png">
            <ShellContent
                ContentTemplate="{DataTemplate local:Info}"
                Route="Info"/>
        </Tab>
        <Tab Title="Terms" Icon="terms.png">
            <ShellContent
                ContentTemplate="{DataTemplate local:Terms}"
                Route="Terms"/>
        </Tab>
        <Tab Title="Signup" Icon="signup.png">
            <ShellContent
                ContentTemplate="{DataTemplate local:Signup}"
                Route="Signup"/>
        </Tab>
    </TabBar>
</Shell>
